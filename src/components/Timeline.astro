---
import type { TimelineItem } from '../lib/openrouter';

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;

// Group by month/year
const grouped = new Map<string, TimelineItem[]>();
for (const item of items) {
  const key = `${item.month} ${item.year}`;
  const existing = grouped.get(key) || [];
  existing.push(item);
  grouped.set(key, existing);
}

// Fun phrases for ship speed
const getShipPhrase = (days: number) => {
  if (days === 0) return 'Same day! üî•';
  if (days <= 1) return 'Speed demon! ‚ö°';
  if (days <= 3) return 'Lightning fast! üöÄ';
  if (days <= 7) return 'Quick ship! üí®';
  if (days <= 14) return 'Two weeks! üì¶';
  return `${days} days`;
};

// Random decorative emojis
const decorEmojis = ['‚ú®', 'üíú', 'üåü', 'üí´', '‚≠ê', 'üîÆ', 'üíé'];
---

<div class="timeline-wrapper">
  <!-- Floating particles background -->
  <div class="particles" aria-hidden="true">
    {Array.from({ length: 15 }).map((_, i) => (
      <span class="particle" style={`--i: ${i}; --emoji: "${decorEmojis[i % decorEmojis.length]}"`}></span>
    ))}
  </div>

  <div class="timeline">
    {[...grouped.entries()].map(([monthYear, monthItems], groupIndex) => (
      <div class="timeline-month" style={`--group-index: ${groupIndex}`}>
        <h3 class="timeline-month-header">
          <span class="month-sparkle">‚ú®</span>
          <span class="month-text">{monthYear}</span>
          <span class="month-sparkle">‚ú®</span>
        </h3>
        <div class="timeline-items">
          {monthItems.map((item, itemIndex) => (
            <div
              class={`timeline-item ${item.isHighlight ? 'highlight' : ''} ${item.isPrivate ? 'private' : ''}`}
              style={`--item-index: ${itemIndex}; --hue: ${(itemIndex * 30) % 360}`}
              data-expandable
            >
              <!-- Decorative blob -->
              <div class="card-blob"></div>

              <div class="timeline-marker-wrapper">
                <span class="timeline-marker">
                  {item.isPrivate ? 'üîí' : item.isHighlight ? '‚≠ê' : 'üíú'}
                </span>
              </div>
              <div class="timeline-content">
                <div class="timeline-header">
                  {item.isPrivate ? (
                    <span class="timeline-title private-title">
                      {item.title}
                      <span class="private-badge">üîê Private</span>
                    </span>
                  ) : (
                    <a href={item.repoUrl} target="_blank" rel="noopener" class="timeline-title">
                      {item.title}
                      <span class="link-arrow">‚Üí</span>
                    </a>
                  )}
                  <button class="expand-btn" aria-label="Expand details" data-expand-btn>
                    <span class="expand-icon">‚ú¶</span>
                  </button>
                </div>
                <p class="timeline-description">{item.description}</p>
                <div class="timeline-meta">
                  {item.language && (
                    <span class="timeline-tag language-tag">
                      <span class="tag-glow"></span>
                      {item.language}
                    </span>
                  )}
                  {item.daysToShip !== null && item.daysToShip >= 0 && (
                    <span class="timeline-ship">
                      {getShipPhrase(item.daysToShip)}
                    </span>
                  )}
                  {item.tags.map((tag) => (
                    <span class="timeline-tag">{tag}</span>
                  ))}
                </div>

                {/* Expandable details section */}
                <div class="timeline-details">
                  {/* Confetti container */}
                  <div class="confetti-container" aria-hidden="true"></div>

                  {/* Commit Activity Graph */}
                  {item.commitActivity.length > 0 && (
                    <div class="commit-graph">
                      <span class="graph-label">üìä Activity (12 weeks)</span>
                      <div class="graph-bars">
                        {item.commitActivity.map((count, i) => {
                          const maxCount = Math.max(...item.commitActivity, 1);
                          const height = Math.max((count / maxCount) * 100, 8);
                          return (
                            <div
                              class="graph-bar"
                              style={`--bar-height: ${height}%; --bar-index: ${i}`}
                              title={`${count} commits`}
                            >
                              <span class="bar-fill"></span>
                              {count > 0 && <span class="bar-sparkle">‚ú®</span>}
                            </div>
                          );
                        })}
                      </div>
                      <div class="graph-legend">
                        <span>‚Üê 12 weeks ago</span>
                        <span>Now ‚Üí</span>
                      </div>
                    </div>
                  )}

                  <div class="details-row">
                    <div class="details-grid">
                      {item.stars > 0 && (
                        <div class="detail-item">
                          <span class="detail-icon">‚≠ê</span>
                          <span class="detail-value">{item.stars}</span>
                          <span class="detail-label">stars</span>
                        </div>
                      )}
                      {item.forks > 0 && (
                        <div class="detail-item">
                          <span class="detail-icon">üç¥</span>
                          <span class="detail-value">{item.forks}</span>
                          <span class="detail-label">forks</span>
                        </div>
                      )}
                      {item.daysToShip !== null && item.daysToShip >= 0 && (
                        <div class="detail-item">
                          <span class="detail-icon">üöÄ</span>
                          <span class="detail-value">{item.daysToShip === 0 ? '<1' : item.daysToShip}</span>
                          <span class="detail-label">days to ship</span>
                        </div>
                      )}
                    </div>

                    {(item.tags.length > 0 || item.language) && (
                      <div class="tech-stack">
                        <span class="tech-label">üõ†Ô∏è Tech Stack</span>
                        <div class="tech-tags">
                          {item.language && <span class="tech-tag primary">{item.language}</span>}
                          {item.tags.map((tag) => (
                            <span class="tech-tag">{tag}</span>
                          ))}
                        </div>
                      </div>
                    )}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</div>

<script>
  function initTimeline() {
    // Expand/collapse functionality with confetti
    document.querySelectorAll('[data-expandable]').forEach((item) => {
      const btn = item.querySelector('[data-expand-btn]');
      const icon = item.querySelector('.expand-icon');
      const confettiContainer = item.querySelector('.confetti-container');

      // Remove any existing listeners to prevent duplicates
      const newBtn = btn?.cloneNode(true);
      if (btn && newBtn) {
        btn.parentNode?.replaceChild(newBtn, btn);
      }

      newBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        const isExpanding = !item.classList.contains('expanded');
        item.classList.toggle('expanded');

        // Update icon
        const currentIcon = item.querySelector('.expand-icon');
        if (currentIcon) {
          currentIcon.textContent = item.classList.contains('expanded') ? '‚úï' : '‚ú¶';
        }

        // Confetti on expand
        if (isExpanding && confettiContainer) {
          createConfetti(confettiContainer as HTMLElement);
        }
      });
    });

    // Add wiggle on hover for detail icons
    document.querySelectorAll('.detail-icon').forEach((icon) => {
      icon.addEventListener('mouseenter', () => {
        icon.classList.add('wiggle');
        setTimeout(() => icon.classList.remove('wiggle'), 500);
      });
    });
  }

  function createConfetti(container: HTMLElement) {
    const emojis = ['‚ú®', 'üíú', 'üåü', 'üí´', '‚≠ê', 'üéâ', 'üíé', 'üîÆ'];
    container.innerHTML = '';

    for (let i = 0; i < 12; i++) {
      const confetti = document.createElement('span');
      confetti.className = 'confetti';
      confetti.textContent = emojis[Math.floor(Math.random() * emojis.length)];
      confetti.style.setProperty('--x', `${(Math.random() - 0.5) * 200}px`);
      confetti.style.setProperty('--y', `${-Math.random() * 100 - 50}px`);
      confetti.style.setProperty('--r', `${(Math.random() - 0.5) * 720}deg`);
      confetti.style.setProperty('--delay', `${i * 0.02}s`);
      confetti.style.left = `${Math.random() * 100}%`;
      container.appendChild(confetti);
    }

    setTimeout(() => {
      container.innerHTML = '';
    }, 1000);
  }

  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTimeline);
  } else {
    initTimeline();
  }

  // Re-initialize on Astro view transitions
  document.addEventListener('astro:page-load', initTimeline);
</script>

<style>
