---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { fetchPinnedRepositories } from '../lib/github';
import { getCollection } from 'astro:content';

// Fetch featured projects and latest blog posts
const featuredProjects = await fetchPinnedRepositories();
const allPosts = await getCollection('blog');
const latestPosts = allPosts
	.sort((a, b) => {
    const dateA = new Date(a.data.pubDate);
    const dateB = new Date(b.data.pubDate);
    return dateB.valueOf() - dateA.valueOf();
  })
	.slice(0, 5);

// Calculate reading time (rough estimate: 200 words per minute)
function calculateReadingTime(content: string): number {
  const wordsPerMinute = 200;
  const wordCount = content.split(/\s+/).length;
  return Math.ceil(wordCount / wordsPerMinute);
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- About Card Section -->
			<div class="about-card-section">
				<div class="about-card">
					<div class="about-card-header">
						<img src="/avatar.jpg" alt="Michelle Mayes" class="about-photo" />
						<div class="about-info">
							<h2>Michelle Mayes</h2>
							<p class="about-role">Software Engineer & Full-Stack Developer</p>
							<div class="about-location">
								<span class="location-icon">üìç</span>
								<span>Available for opportunities</span>
							</div>
						</div>
					</div>
					<div class="about-content">
						<p>
							I'm a passionate software engineer with expertise in full-stack development and a strong eye for UI/UX. 
							I build performant, pixel-perfect applications that are both functional and visually appealing.
						</p>
						<div class="about-skills">
							<span class="skill-tag">JavaScript</span>
							<span class="skill-tag">TypeScript</span>
							<span class="skill-tag">React</span>
							<span class="skill-tag">Node.js</span>
							<span class="skill-tag">Python</span>
							<span class="skill-tag">AWS</span>
						</div>
						<div class="about-actions">
							<a href="/resume" class="btn btn-outline">Download Resume</a>
							<a href="/about" class="btn btn-secondary">Full About</a>
						</div>
					</div>
				</div>
			</div>

			<!-- Featured Projects Section -->
			{featuredProjects.length > 0 && (
				<div class="section-header">
					<h2>Featured Projects</h2>
					<p>Some of my recent work and open source contributions</p>
				</div>
			)}

			{featuredProjects.length > 0 && (
				<div class="grid grid-3" style="margin-bottom: 4rem;">
					{featuredProjects.slice(0, 3).map((project) => (
						<div class="card project-card">
							<h3>
								<a href={project.html_url} target="_blank" rel="noopener noreferrer">
									{project.name}
								</a>
							</h3>
							
							{project.description && (
								<p>{project.description}</p>
							)}
							
							<div class="card-meta">
								{project.language && (
									<span class="language-badge">{project.language}</span>
								)}
							</div>

							<div class="card-footer">
								<div class="project-stats">
									<span>‚≠ê {project.stargazers_count}</span>
									<span>üç¥ {project.forks_count}</span>
								</div>
								<a href={project.html_url} class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
									View Project
								</a>
							</div>
						</div>
					))}
				</div>
			)}

			<!-- Latest Blog Posts Section -->
			{latestPosts.length > 0 && (
				<div class="blog-section">
					<div class="section-header">
						<h2>Latest Articles</h2>
						<p>Recent thoughts and insights I've shared</p>
					</div>
					<div class="blog-posts-grid">
						{latestPosts.slice(0, 3).map((post) => {
							const readingTime = calculateReadingTime(post.body);
							return (
								<article class="blog-post-card-small">
									<div class="blog-post-card-content">
										<h3>
											<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
										</h3>
										<div class="blog-post-meta">
											<span class="blog-post-date">{new Date(post.data.pubDate).toLocaleDateString()}</span>
											<span class="blog-post-reading-time">{readingTime} min read</span>
											{post.data.tags && post.data.tags.length > 0 && (
												<span class="blog-post-tags">‚Ä¢ {post.data.tags.join(', ')}</span>
											)}
										</div>
										<p class="blog-post-description">{post.data.description}</p>
									</div>
									<div class="blog-post-card-footer">
										<a href={`/blog/${post.slug}/`} class="btn btn-secondary">Read More</a>
									</div>
								</article>
							);
						})}
					</div>
					<div class="blog-section-footer">
						<a href="/blog" class="btn btn-outline">View All Articles</a>
					</div>
				</div>
			)}

		</main>
		<Footer />
	</body>
</html>

<style>

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-header h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: rgb(var(--black));
	}

	.section-header p {
		font-size: 1.1rem;
		color: rgb(var(--gray));
		max-width: 500px;
		margin: 0 auto;
	}

	/* About Card Section */
	.about-card-section {
		margin-bottom: 4rem;
	}

	.about-card {
		max-width: 800px;
		margin: 0 auto;
		background: var(--card-bg);
		border: 1px solid var(--card-border);
		border-radius: 16px;
		padding: 2rem;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
	}

	.about-card-header {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		margin-bottom: 1.5rem;
	}

	.about-photo {
		width: 80px;
		height: 80px;
		border-radius: 50%;
		object-fit: cover;
		border: 3px solid var(--accent);
	}

	.about-info h2 {
		margin: 0 0 0.25rem 0;
		font-size: 1.5rem;
		color: rgb(var(--black));
	}

	.about-role {
		margin: 0 0 0.5rem 0;
		color: var(--accent);
		font-weight: 600;
	}

	.about-location {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: rgb(var(--gray));
		font-size: 0.9rem;
	}

	.about-content p {
		margin-bottom: 1.5rem;
		color: rgb(var(--gray-dark));
		line-height: 1.6;
	}

	.about-skills {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.skill-tag {
		background: var(--accent-100);
		color: var(--accent-dark);
		padding: 0.25rem 0.75rem;
		border-radius: 20px;
		font-size: 0.8rem;
		font-weight: 600;
	}

	.about-actions {
		display: flex;
		gap: 1rem;
	}

	.about-actions .btn {
		padding: 0.5rem 1rem;
		font-size: 0.9rem;
	}

	.blog-section-footer .btn {
		padding: 0.5rem 1rem;
		font-size: 0.9rem;
	}

	/* Blog Section */
	.blog-section {
		margin-bottom: 4rem;
	}

	.blog-posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
		margin-bottom: 2rem;
	}

	.blog-post-card-small {
		background: var(--card-bg);
		border: 1px solid var(--card-border);
		border-radius: 12px;
		padding: 1.5rem;
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
	}

	.blog-post-card-small:hover {
		box-shadow: var(--card-hover-shadow);
		transform: translateY(-2px);
	}

	.blog-post-card-content {
		flex: 1;
		margin-bottom: 1rem;
	}

	.blog-post-card-small h3 {
		margin: 0 0 0.75rem 0;
		font-size: 1.1rem;
	}

	.blog-post-card-small h3 a {
		color: var(--accent);
		text-decoration: none;
	}

	.blog-post-card-small h3 a:hover {
		text-decoration: underline;
	}

	.blog-post-meta {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 0.75rem;
		font-size: 0.85rem;
		color: rgb(var(--gray));
	}

	.blog-post-date {
		font-weight: 500;
	}

	.blog-post-reading-time {
		background: var(--accent-100);
		color: var(--accent-dark);
		padding: 0.2rem 0.5rem;
		border-radius: 4px;
		font-size: 0.75rem;
		font-weight: 600;
	}

	.blog-post-tags {
		color: rgb(var(--gray));
	}

	.blog-post-description {
		margin: 0;
		color: rgb(var(--gray-dark));
		line-height: 1.5;
		font-size: 0.9rem;
	}

	.blog-post-card-footer {
		margin-top: auto;
	}

	.blog-post-card-footer .btn {
		padding: 0.4rem 0.8rem;
		font-size: 0.8rem;
	}

	.blog-section-footer {
		text-align: center;
	}

	@media (max-width: 768px) {
		.about-card-header {
			flex-direction: column;
			text-align: center;
			gap: 1rem;
		}

		.about-actions {
			justify-content: center;
		}

		.blog-posts-grid {
			grid-template-columns: 1fr;
		}
	}
</style>