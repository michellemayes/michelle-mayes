---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
import aboutPhoto from '../../public/about-photo.jpg';

// Prerender this page as static
export const prerender = true;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About - ${SITE_TITLE}`} description="Learn more about Michelle Mayes" />
	</head>
	<body>
		<Header />
		<main>
			<div class="section-header">
				<h1>About Me</h1>
			</div>

			<div class="about-card">
				<div class="about-card-header">
					<Image src={aboutPhoto} alt="Michelle Mayes" class="about-photo" width={120} height={120} loading="lazy" />
					<div class="about-info">
						<p>
							I build practical products at the intersection of AI and web development, with a strong bias toward shipping quickly and learning in public.
						</p>
						<p>
							My background spans Data Science, Policy, and AdTech, and I bring that product perspective into modern full-stack work: clear problem framing, fast iteration, and outcome-focused decisions.
						</p>
						<p>
							Right now I am focused on opportunities where I can build with high-velocity teams, improve developer workflows with AI, and share what works through writing and talks.
						</p>
						<p>
							Based in Austin, TX.
						</p>
					</div>
				</div>
			</div>

			<div class="github-activity-section">
				<h3>My GitHub Activity</h3>
				<div class="github-calendar-container">
					<img
						src="https://ghchart.rshah.org/michellemayes"
						alt="Michelle Mayes GitHub Activity"
						class="github-calendar"
						loading="lazy"
						decoding="async"
						referrerpolicy="no-referrer"
					/>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		box-sizing: border-box;
	}

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-header h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: var(--accent);
	}

	.section-header p {
		font-size: 1.1rem;
		color: var(--text-muted);
		max-width: 500px;
		margin: 0 auto;
	}

	.about-card {
		max-width: 800px;
		margin: 0 auto 3rem auto;
		background: var(--bg-card);
		border: 1px solid var(--accent-100);
		border-radius: 16px;
		padding: 2rem;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
	}

	.about-card-header {
		display: flex;
		align-items: flex-start;
		gap: 1.5rem;
	}

	.about-photo {
		width: 120px;
		height: 120px;
		border-radius: 50%;
		object-fit: cover;
		border: 3px solid var(--accent);
		flex-shrink: 0;
	}

	.about-info {
		flex: 1;
	}

	.about-info h2 {
		margin: 0 0 1rem 0;
		font-size: 1.5rem;
		color: var(--text);
	}

	.about-info p {
		margin-bottom: 1rem;
		color: var(--text-muted);
		line-height: 1.6;
	}

	.about-info p:last-child {
		margin-bottom: 0;
	}

	.github-activity-section {
		margin: 3rem 0;
		text-align: center;
	}

	.github-activity-section h3 {
		font-size: 1.5rem;
		color: var(--accent);
		margin-bottom: 2rem;
	}

	.github-calendar-container {
		background: var(--bg-card);
		border: 1px solid var(--accent-100);
		border-radius: 12px;
		padding: 1.5rem;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
		display: inline-block;
	}

	.github-calendar {
		width: 100%;
		max-width: 800px;
		height: auto;
		border-radius: 8px;
	}

	.card {
		background: var(--bg-card);
		border: 1px solid var(--accent-100);
		border-radius: 12px;
		padding: 1.5rem;
		transition: all 0.3s ease;
	}

	.card:hover {
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
	}

	.card h3 {
		margin: 0 0 1rem 0;
		font-size: 1.3rem;
		color: var(--accent);
	}

	.card p {
		margin-bottom: 1rem;
		color: var(--text-muted);
		line-height: 1.6;
	}

	.card p:last-child {
		margin-bottom: 0;
	}


	@media (max-width: 768px) {
		main {
			padding: 1rem;
		}

		.section-header h1 {
			font-size: 2rem;
		}

		.section-header p {
			font-size: 1rem;
		}

		.about-card {
			padding: 1.5rem;
		}

		.about-card-header {
			flex-direction: column;
			align-items: center;
			text-align: center;
			gap: 1rem;
		}

		.about-photo {
			width: 100px;
			height: 100px;
			align-self: center;
		}

		.about-info h2 {
			font-size: 1.3rem;
		}

		.about-info p {
			font-size: 0.95rem;
		}

		.github-activity-section h3 {
			font-size: 1.3rem;
		}

		.github-calendar-container {
			padding: 1rem;
		}

		.github-calendar {
			max-width: 100%;
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 0.75rem;
		}

		.section-header h1 {
			font-size: 1.75rem;
		}

		.about-card {
			padding: 1rem;
		}

		.about-photo {
			width: 80px;
			height: 80px;
			align-self: center;
		}

		.about-info h2 {
			font-size: 1.2rem;
		}

		.about-info p {
			font-size: 0.9rem;
		}

		.github-activity-section h3 {
			font-size: 1.2rem;
		}

		.github-calendar-container {
			padding: 0.75rem;
		}
	}
</style>
