---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Resume - ${SITE_TITLE}`} description="Michelle Mayes - Resume and CV" />
	</head>
	<body>
		<Header />
		<main>
			<div class="section-header">
				<h1>Resume</h1>
				<p>Download my resume or view it online below.</p>
			</div>

			<div class="resume-card">
				<div class="resume-download">
					<a href="/resume.pdf" class="btn" download="Michelle_Mayes_Resume.pdf">
						ðŸ“„ Download PDF
					</a>
				</div>

				<div class="resume-container">
					<iframe 
						src="/resume.pdf" 
						width="100%" 
						height="800px"
						title="Resume PDF"
					>
						<p>
							Your browser doesn't support PDFs. 
							<a href="/resume.pdf" download="Michelle_Mayes_Resume.pdf">Download the PDF instead</a>.
						</p>
					</iframe>
				</div>

				<div class="resume-fallback">
					<p>Having trouble viewing the PDF? <a href="/resume.pdf" download="Michelle_Mayes_Resume.pdf">Download it here</a>.</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
	}

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-header h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: var(--accent);
	}

	.section-header p {
		font-size: 1.1rem;
		color: rgb(var(--gray));
		max-width: 500px;
		margin: 0 auto;
	}

	.resume-card {
		background: var(--card-bg);
		border: 1px solid var(--card-border);
		border-radius: 12px;
		padding: 2rem;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
		text-align: center;
	}

	.resume-download {
		margin-bottom: 2rem;
	}

	.btn {
		display: inline-block;
		padding: 0.5rem 1rem;
		background: var(--accent);
		color: white;
		text-decoration: none;
		border-radius: 6px;
		font-weight: 600;
		transition: all 0.3s ease;
		font-size: 0.9rem;
	}

	.btn:hover {
		background: var(--accent-dark);
		transform: translateY(-1px);
	}

	.resume-container {
		margin: 2rem 0;
	}

	.resume-container iframe {
		border: 1px solid var(--card-border);
		border-radius: 8px;
		width: 100%;
		height: 800px;
	}

	.resume-fallback {
		margin-top: 1rem;
		color: rgb(var(--gray));
		font-size: 0.9rem;
	}

	.resume-fallback a {
		color: var(--accent);
		text-decoration: none;
	}

	.resume-fallback a:hover {
		text-decoration: underline;
	}

	@media (max-width: 768px) {
		main {
			padding: 1rem;
		}

		.section-header h1 {
			font-size: 2rem;
		}

		.resume-container iframe {
			height: 600px;
		}
	}
</style>
